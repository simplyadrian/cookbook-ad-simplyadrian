[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= @krb5_domain.upcase %>
 dns_lookup_realm = true
 dns_lookup_kdc = true
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
 <%= @krb5_domain.upcase %> = {
  <% @krb5_kdc_servers.each do |server| -%>
  kdc = <%= server %>.<%= @krb5_domain %>
  <% end -%>
  admin_server = <%= @krb5_kdc_servers.first %>.<%= @krb5_domain %>
 }

[domain_realm]
 .<%= @krb5_domain %> = <%= @krb5_domain.upcase %>
 <%= @krb5_domain %> = <%= @krb5_domain.upcase %>
